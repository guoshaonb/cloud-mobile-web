page {
  overflow: hidden;
}
.container {
  padding-bottom: 134rpx;
  width: 93%;
  margin: 30rpx auto 0;
  /* 空白页 */
}
.container .empty {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  padding-bottom: 100rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: #fff;
}
.container .empty image {
  width: 240rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}
.container .empty .empty-tips {
  display: flex;
  font-size: 26rpx;
  color: #C0C4CC;
}
.container .empty .empty-tips .navigator {
  color: #fa436a;
  margin-left: 16rpx;
}
.phone-item {
  display: flex;
  position: relative;
  padding: 30rpx 40rpx;
  background-color: #fff;
  border-radius: 1.3rem;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
}
.phone-item .image-wrapper {
  width: 230rpx;
  height: 400rpx;
  -webkit-transform: scale(1.1);
          transform: scale(1.1);
}
.phone-item .image-wrapper uni-image {
  opacity: 1 !important;
}
.phone-item .checkbox {
  position: absolute;
  left: -16rpx;
  top: -16rpx;
  z-index: 8;
  font-size: 44rpx;
  line-height: 1;
  padding: 4rpx;
  color: #C0C4CC;
  background: #fff;
  border-radius: 100rpx;
}
.phone-item .item-right {
  position: relative;
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
  position: relative;
  padding-left: 30rpx;
}
.phone-item .item-right .title,
.phone-item .item-right .price {
  font-size: 30rpx;
  color: #303133;
  height: 40rpx;
  line-height: 40rpx;
}
.phone-item .item-right .attr {
  font-size: 26rpx;
  color: #909399;
  height: 50rpx;
  line-height: 50rpx;
}
.phone-item .item-right .price {
  height: 50rpx;
  line-height: 50rpx;
}
.phone-item .item-right .item-right-edit {
  display: flex;
  justify-content: space-between;
}
.phone-item .item-right .add-timer {
  position: absolute;
  right: 6rpx;
  top: 0;
}
.phone-item .item-right .add-timer .add-timer-icon {
  margin-right: 5rpx;
}
.phone-item .item-right .phone-reload {
  position: absolute;
  right: 6rpx;
  top: 0;
}
.phone-item .item-right .phone-reload .phone-reload-icon {
  margin-right: 5rpx;
}
.phone-item .del-btn {
  padding: 4rpx 10rpx;
  font-size: 34rpx;
  height: 50rpx;
  color: #909399;
}
.phone-item .image-wrapper {
  width: 180rpx !important;
  height: 300rpx !important;
}
.phone-item .item-right {
  padding-left: 20rpx;
  position: relative;
  top: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.phone-item uni-text,
.phone-item text {
  line-height: 1.5;
}
/* 底部栏 */
.action-section {



  position: fixed;
  left: 30rpx;
  bottom: 30rpx;
  z-index: 95;
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 100rpx;
  padding: 0 30rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.5);
  border-radius: 16rpx;
}
.action-section .checkbox {
  height: 52rpx;
  position: relative;
}
.action-section .checkbox image {
  width: 52rpx;
  height: 100%;
  position: relative;
  z-index: 5;
}
.action-section .clear-btn {
  position: absolute;
  left: 26rpx;
  top: 0;
  z-index: 4;
  width: 0;
  height: 52rpx;
  line-height: 52rpx;
  padding-left: 38rpx;
  font-size: 28rpx;
  color: #fff;
  background: #C0C4CC;
  border-radius: 0 100rpx 100rpx 0;
  opacity: 0;
  transition: 0.2s;
}
.action-section .clear-btn.show {
  opacity: 1;
  width: 120rpx;
}
.action-section .total-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: right;
  padding-right: 40rpx;
}
.action-section .total-box .price {
  font-size: 32rpx;
  color: #303133;
}
.action-section .total-box .coupon {
  font-size: 24rpx;
  color: #909399;
}
.action-section .total-box .coupon text {
  color: #303133;
}
.action-section .confirm-btn {
  padding: 0 38rpx;
  margin: 0;
  border-radius: 200rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 30rpx;
  background: #fa436a;
  box-shadow: 2rpx 4rpx 10rpx rgba(217, 60, 93, 0.72);
}
/* 复选框选中状态 */
.action-section .checkbox.checked,
.phone-item .checkbox.checked {
  color: #fa436a;
}
.expiration-date text {
  font-size: 26rpx;
}
